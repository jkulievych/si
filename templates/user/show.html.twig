{% extends 'base.html.twig' %}

{% block title %}
    {{ 'User details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'User details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'Email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'Roles'|trans }}</dt>
            <dd>{{ user.roles|join(', ') }}</dd>
            <dt>{{ 'Actions'|trans }}</dt>
            <dd>
                <a href="{{ path('user_index') }}" title="{{ 'Back'|trans }}">
                    {{ 'Back'|trans }}
                </a>
            </dd>
        </dl>
    {% else %}
        <p>
            {{ 'Record not found'|trans }}
        </p>
    {% endif %}
{% endblock %}

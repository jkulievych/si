{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Comment details'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Comment details'|trans({'%id%': comment.id|default('')}) }}</h1>
    {% if comment is defined and comment|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'id'|trans }}</dt>
            <dd>{{ comment.id }}</dd>
            <dt>{{ 'Created at'|trans }}</dt>
            <dd>{{ comment.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Updated at'|trans }}</dt>
            <dd>{{ comment.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'News'|trans }}</dt>
            <dd>{{ comment.news.title }}</dd>
            <dt>{{ 'Author'|trans }}</dt>
            <dd>{{ comment.author.email }}</dd>
            <dt>{{ 'Actions'|trans }}</dt>
            <dd>
                <a href="{{ path('comment_index') }}" title="{{ 'Back'|trans }}">
                    {{ 'Back'|trans }}
                </a>
            </dd>
        </dl>
    {% else %}
        <p>
            {{ 'Record not found'|trans }}
        </p>
    {% endif %}
{% endblock %}

